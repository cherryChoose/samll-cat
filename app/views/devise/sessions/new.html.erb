<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading"><%= t("users.logins") %></div>
      <div class="panel-body">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), remote: true, html: { class: "" }) do |f| %>
            <div class="form-group">
              <%= f.text_field :login, type: :email, class: "form-control input-lg", placeholder: "用户名 / Email" %>
            </div>
            <div class="form-group">
              <%= f.text_field :password, type: :password, class: "form-control input-lg", placeholder: "密码" %>
            </div>

            <% if devise_mapping.rememberable? -%>
                <div class="from-group checkbox">
                  <label for="user_remember_me">
                    <%= f.check_box :remember_me %> <%= t("users.remember_me") %>
                  </label>
                </div>
            <% end -%>
            <div class="form-actions">
              <%= f.submit t("users.logins"), class: "btn btn-primary btn-lg btn-block", 'data-disable-with' => t("common.logining") %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-4">

    <div class="panel panel-default">
      <div class="panel panel-heading">
        <%= t("users.other_information_for_login_view")%>
      </div>
        <div class="panel-body">
          <%= render partial: "devise/shared/links" %>
        </div>
    </div>
  </div>
</div>



